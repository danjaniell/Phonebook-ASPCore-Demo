@model Phonebook.Models.Contact

<form asp-action="Delete" asp-area="Contacts" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label>First Name:</label>
                <input asp-for="FirstName" type="text" readonly class="form-control required"
                    placeholder="Enter first name" tabindex="1">
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Last Name:</label>
                <input asp-for="LastName" type="text" readonly class="form-control required"
                    placeholder="Enter last name" tabindex="2">
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input asp-for="Email" type="text" readonly class="form-control required" placeholder="Enter email"
                    tabindex="3">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Mobile Number:</label>
                <input asp-for="Mobile" type="text" readonly class="form-control required" placeholder="Enter mobile"
                    tabindex="4">
                <span asp-validation-for="Mobile" class="text-danger"></span>
            </div>
            <div class="card-footer">
                <center>
                    <button type="submit" class="btn btn-danger">Delete Contact</button>
                    <a asp-action="Index" asp-controller="Contacts" class="btn btn-secondary">Cancel</a>
                </center>
            </div>
        </div>
    </div>
</form>